---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Generate paths for all blog posts
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format date
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(entry.data.pubDate);
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.description}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Article Header -->
    <header class="mb-12 relative">
      <a
        href="/blog"
        class="text-red-600 hover:text-red-800 text-sm font-semibold mb-6 inline-flex items-center gap-2 transition-colors group"
      >
        <span class="group-hover:-translate-x-1 transition-transform">←</span> Back to all posts
      </a>
      <div class="absolute -left-4 top-12 w-1 h-24 bg-gradient-to-b from-red-600 to-red-800 rounded-full"></div>
      <h1 class="text-4xl sm:text-5xl font-bold mb-4 mt-4" style="color: var(--text-primary)">
        {entry.data.title}
      </h1>
      <div class="flex flex-wrap items-center gap-4 font-medium" style="color: var(--text-secondary)">
        <time datetime={entry.data.pubDate.toISOString()} class="text-red-600 font-semibold">
          {formattedDate}
        </time>
        {entry.data.author && (
          <>
            <span>•</span>
            <span>By {entry.data.author}</span>
          </>
        )}
      </div>
      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-5">
          {entry.data.tags.map((tag) => (
            <span class="px-4 py-1.5 bg-red-50 text-red-700 text-sm font-medium rounded-full border border-red-200">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Article Footer -->
    <footer class="mt-16 pt-8 border-t-2 border-red-100">
      <a
        href="/blog"
        class="text-red-600 hover:text-red-800 font-semibold inline-flex items-center gap-2 transition-colors group"
      >
        <span class="group-hover:-translate-x-1 transition-transform">←</span> Back to all posts
      </a>
    </footer>
  </article>
</BaseLayout>
