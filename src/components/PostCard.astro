---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
}

const { title, description, pubDate, slug } = Astro.props;

// Format date
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate);
---

<article class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow duration-200">
  <a href={`/blog/${slug}`} class="group">
    <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
      {title}
    </h3>
    <time class="text-sm text-gray-500 mb-3 block">
      {formattedDate}
    </time>
    <p class="text-gray-700 leading-relaxed">
      {description}
    </p>
  </a>
</article>
