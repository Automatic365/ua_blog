---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
}

const { title, description, pubDate, slug } = Astro.props;

// Format date
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate);
---

<article class="relative border-l-4 border-red-600 bg-white rounded-lg p-6 shadow-sm hover:shadow-xl transition-all duration-300 hover:border-red-700 hover:-translate-y-1">
  <a href={`/blog/${slug}`} class="group block">
    <h3 class="text-xl font-bold mb-2 group-hover:text-red-600 transition-colors" style="color: var(--text-primary)">
      {title}
    </h3>
    <time class="text-sm font-medium mb-3 block" style="color: var(--accent-red)">
      {formattedDate}
    </time>
    <p class="leading-relaxed" style="color: var(--text-secondary)">
      {description}
    </p>
    <span class="inline-block mt-4 text-red-600 font-medium group-hover:translate-x-2 transition-transform">
      Read more â†’
    </span>
  </a>
</article>
