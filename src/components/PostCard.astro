---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
}

const { title, description, pubDate, slug } = Astro.props;

// Format date
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate);
---

<article class="stagger-fade-in relative border-l-4 border-red-600 bg-white/80 backdrop-blur-sm rounded-lg p-6 shadow-sm hover:shadow-2xl transition-all duration-300 hover:border-red-700 hover:-translate-y-2 group overflow-hidden">
  <!-- Decorative corner element -->
  <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-red-50 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

  <!-- Animated background glow -->
  <div class="absolute inset-0 bg-gradient-to-r from-red-600/0 via-red-600/5 to-red-600/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <a href={`/blog/${slug}`} class="relative z-10 block">
    <div class="flex items-start justify-between mb-2">
      <h3 class="text-xl font-bold group-hover:text-red-600 transition-colors flex-1" style="color: var(--text-primary)">
        {title}
      </h3>
      <span class="text-red-600 opacity-0 group-hover:opacity-100 group-hover:translate-x-0 translate-x-4 transition-all duration-300 ml-2">
        â†’
      </span>
    </div>

    <div class="flex items-center gap-2 mb-3">
      <div class="w-1.5 h-1.5 rounded-full bg-red-600 animate-pulse"></div>
      <time class="text-sm font-semibold tracking-wide" style="color: var(--accent-red)">
        {formattedDate}
      </time>
    </div>

    <p class="leading-relaxed mb-4" style="color: var(--text-secondary)">
      {description}
    </p>

    <div class="flex items-center gap-2 text-red-600 font-semibold text-sm">
      <span class="group-hover:translate-x-1 transition-transform">Read article</span>
      <svg class="w-4 h-4 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    </div>
  </a>
</article>
