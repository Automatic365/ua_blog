---
// Navigation component with personality
const currentPath = Astro.url.pathname;
---

<nav class="border-b border-red-100/50 backdrop-blur-md sticky top-0 z-50 bg-gradient-to-r from-white/90 via-red-50/30 to-white/90 shadow-sm">
  <!-- Animated border at bottom -->
  <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-red-600 to-transparent opacity-60"></div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="relative group text-xl font-bold tracking-tight transition-all duration-300" style="color: var(--text-primary)">
        <span class="relative z-10">Jason</span>
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-red-600 to-red-700 group-hover:w-full transition-all duration-300"></span>
        <span class="absolute inset-0 bg-gradient-to-r from-red-600/0 via-red-600/10 to-red-600/0 opacity-0 group-hover:opacity-100 transition-opacity blur-xl"></span>
      </a>

      <div class="flex space-x-8">
        <a
          href="/blog"
          class={`relative font-semibold transition-all duration-300 group ${currentPath.startsWith('/blog') ? 'text-red-600' : ''}`}
          style={currentPath.startsWith('/blog') ? '' : 'color: var(--text-secondary)'}
        >
          <span class="relative z-10">Blog</span>
          <span class={`absolute -bottom-1 left-0 h-0.5 bg-gradient-to-r from-red-600 to-red-700 transition-all duration-300 ${currentPath.startsWith('/blog') ? 'w-full' : 'w-0 group-hover:w-full'}`}></span>
          {currentPath.startsWith('/blog') && (
            <span class="absolute -left-1 -right-1 -top-1 -bottom-1 bg-red-600/5 rounded transition-all"></span>
          )}
        </a>
      </div>
    </div>
  </div>
</nav>
